<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingBottom="@dimen/material_8"
                android:paddingLeft="@dimen/material_40"
                android:paddingRight="@dimen/material_8"
                android:paddingTop="@dimen/material_8">

    <ImageView
        android:id="@+id/chat_item_sticker"
        android:layout_width="@dimen/sp_sticker_item_size"
        android:layout_height="@dimen/sp_sticker_item_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/chat_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chat_item_sticker"
        android:layout_alignStart="@+id/chat_item_sticker"
        android:layout_below="@+id/chat_item_sticker"
        android:layout_marginBottom="@dimen/material_8"
        android:layout_marginRight="@dimen/material_8"
        android:gravity="right"
        android:text="Today, 9.18"
        android:textColor="@color/chat_item_text"
        android:textSize="@dimen/text_12"/>

</RelativeLayout>